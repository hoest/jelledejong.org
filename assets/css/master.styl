@import '_settings'
@import 'jeet'

normalize-css()
base()
// edit()

body
  font-weight: 300
  background-color: $light_gray
  color: $dark_gray

h1, h2, h3, h4, h5, h6
  font-weight: 300

main, header, section
  center(980px)
  padding: 1rem

header
  h1
    font-family: $bangers
    font-size: 4em
    margin: 0 0 .2em 0

  h2
    margin: 0
    font-style: italic

  a
    color: $dark_gray

    &:hover
      color: $dark_blue

  nav
    text-align: right
    margin: .5em 0

    ul.social-links
      list-style: none
      margin: 0
      padding: 0

      li
        margin: 0
        padding: 0
        display: inline-block
        text-align: center

.wrapper-header
  color: $dark_gray
  background-color: $yellow

.wrapper-main
  color: $light_gray
  background-color: $dark_blue

  main
    a
      color: $yellow
      text-decoration: none

      &:hover
        text-decoration: underline

    .summary
      font-weight: 500

    .my-picture
      font-size: 1.5em;
      margin: 0.83em 0;
      text-align: center

      .bordered-img
        border-radius: 50%

        img
          max-width: 80%
          border: 3px solid $yellow
          border-radius: 50%

.wrapper-contact
  background-color $yellow
  color $dark_blue

  a
    color $dark_gray

.wrapper-portfolio
  background-color $light_gray
  color $dark_blue

  section
    .my-portfolio
      .slides
        .slide
          margin .75em
          box-shadow 0 0 .5em rgba(0, 0, 0, .5)

          img
            border 1px solid $light_gray

          :hover img
            border 1px solid $yellow

+above(600px)
  main, section
    display: flex

  .my-picture
    column(1/3)

  .my-story
    column(2/3)

  .my-portfolio, .my-contact
    column(1/1)
